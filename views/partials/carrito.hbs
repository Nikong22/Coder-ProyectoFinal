<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Producto</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Categoria</th>
            <th scope="col">Codigo</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    {{#each productos}}
        <tr>
            <th scope="row">{{this._id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category}}</td>
            <td>{{this.code}}</td>
            <td>{{this.price}}</td>
            <td><img src="{{this.thumbnail}}" width= "35"  alt="url"></td>
            <td>
                <form action="/api/carrito/del_producto/{{this._id}}" method="post">
                <button type="submit">
                <img src="https://cdn1.iconfinder.com/data/icons/ecology-green-environment-glyph-icons/38/papelera-256.png" width= "30"  alt="url">
                </button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
